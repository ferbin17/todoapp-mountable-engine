<!DOCTYPE html>
<html>
  <head>
    <title>Todoapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="icon" href="https://icon-library.net/images/todo-list-icon/todo-list-icon-20.jpg" type="image/x-icon">
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'todoapp/application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'todoapp/application' %>
  </head>
  <body>
    <div class="container">
      <% if notice %>
        <p class="alert alert-success"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>

      <% if user_signed_in? %>
        <div class = "icon-section" >
          <%= link_to '<img src = "https://icon-library.net/images/todo-list-icon/todo-list-icon-20.jpg" alt="icon" width = "100px" height = "80px" border="0" />'.html_safe, root_path %>
        </div>
        <div class = "top-section" >
          <p class="navbar-text pull-right" >
            <%= link_to current_user.email_id, sign_up_users_path, :class => 'login_bar navbar-link' %>
            <%# &nbsp &nbsp &nbsp &nbsp &nbsp %>
            <%= link_to "Logout", logout_users_path, method: :delete, :class => 'login_bar navbar-link'  %>
      <% else %>
            <%= link_to "Sign up", sign_up_users_path, :class => 'login_bar navbar-link'  %>
            <%# &nbsp &nbsp &nbsp &nbsp &nbsp %>
            <%= link_to "Login", login_users_path, :class => 'login_bar navbar-link'  %>
      <% end %>
          </p>
          <%= yield %>
        </div>
  </body>
</html>
